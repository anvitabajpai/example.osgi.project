<?xml version="1.0" encoding="UTF-8" ?>
<schema name="default" version="1.2">
	<types>
		<fieldType name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true" />
		<fieldType name="boolean" class="solr.BoolField" sortMissingLast="true" omitNorms="true" />
		<fieldtype name="binary" class="solr.BinaryField" />
		<fieldType name="int" class="solr.TrieIntField" precisionStep="0" omitNorms="true" positionIncrementGap="0" />
		<fieldType name="float" class="solr.TrieFloatField" precisionStep="0" omitNorms="true" positionIncrementGap="0" />
		<fieldType name="long" class="solr.TrieLongField" precisionStep="0" omitNorms="true" positionIncrementGap="0" />
		<fieldType name="double" class="solr.TrieDoubleField" precisionStep="0" omitNorms="true" positionIncrementGap="0" />

		<fieldType name="tint" class="solr.TrieIntField" precisionStep="8" omitNorms="true" positionIncrementGap="0" />
		<fieldType name="tfloat" class="solr.TrieFloatField" precisionStep="8" omitNorms="true" positionIncrementGap="0" />
		<fieldType name="tlong" class="solr.TrieLongField" precisionStep="8" omitNorms="true" positionIncrementGap="0" />
		<fieldType name="tdouble" class="solr.TrieDoubleField" precisionStep="8" omitNorms="true" positionIncrementGap="0" />
		<fieldType name="date" class="solr.TrieDateField" omitNorms="true" precisionStep="0" positionIncrementGap="0" />
		<fieldType name="tdate" class="solr.TrieDateField" omitNorms="true" precisionStep="6" positionIncrementGap="0" />

		<fieldType name="pint" class="solr.IntField" omitNorms="true" />
		<fieldType name="plong" class="solr.LongField" omitNorms="true" />
		<fieldType name="pfloat" class="solr.FloatField" omitNorms="true" />
		<fieldType name="pdouble" class="solr.DoubleField" omitNorms="true" />
		<fieldType name="pdate" class="solr.DateField" sortMissingLast="true" omitNorms="true" />

		<fieldType name="sint" class="solr.SortableIntField" sortMissingLast="true" omitNorms="true" />
		<fieldType name="slong" class="solr.SortableLongField" sortMissingLast="true" omitNorms="true" />
		<fieldType name="sfloat" class="solr.SortableFloatField" sortMissingLast="true" omitNorms="true" />
		<fieldType name="sdouble" class="solr.SortableDoubleField" sortMissingLast="true" omitNorms="true" />
		<fieldType name="random" class="solr.RandomSortField" indexed="true" />

		<fieldType name="text" class="solr.TextField" positionIncrementGap="100">
			<analyzer type="index">
				<tokenizer class="solr.StandardTokenizerFactory" />
				<filter class="solr.LowerCaseFilterFactory" />
				<filter class="solr.TrimFilterFactory" />
				<filter class="solr.RemoveDuplicatesTokenFilterFactory" />
				<filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="1" catenateNumbers="1" catenateAll="0" splitOnCaseChange="1" />
				<filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
				<filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="false" />
				<filter class="solr.SnowballPorterFilterFactory" language="Dutch" />
			</analyzer>
			<analyzer type="query">
				<tokenizer class="solr.StandardTokenizerFactory" />

				<filter class="solr.LowerCaseFilterFactory" />
				<filter class="solr.TrimFilterFactory" />
				<filter class="solr.RemoveDuplicatesTokenFilterFactory" />
				<filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" catenateWords="1" catenateNumbers="1" catenateAll="0" splitOnCaseChange="1" />
				<filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
				<filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="false" />
				<filter class="solr.SnowballPorterFilterFactory" language="Dutch" />
			</analyzer>
		</fieldType>

		<fieldType name="uri" class="solr.TextField" positionIncrementGap="100">
			<analyzer>
				<tokenizer class="solr.StandardTokenizerFactory" />
				<filter class="solr.LowerCaseFilterFactory" />
				<filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1" />
				<filter class="solr.StopFilterFactory" ignoreCase="true" words="urlwords.txt" enablePositionIncrements="true" />
				<filter class="solr.RemoveDuplicatesTokenFilterFactory" />
			</analyzer>
		</fieldType>

		<fieldtype name="ignored" stored="false" indexed="false" multiValued="true" class="solr.StrField" />
	</types>

	<fields>
		<field name="uri" type="uri" stored="true" indexed="true" required="true" />
		<field name="host" type="uri" stored="true" indexed="true" />
		<field name="site" type="string" stored="true" indexed="true" />
		<field name="anchor" type="string" stored="true" indexed="true" multiValued="true" />
		<field name="content" type="text" stored="true" indexed="true" multiValued="true" />
		<field name="mime-type" type="text" stored="true" indexed="true" />
		<field name="size" type="long" stored="true" indexed="false" />
		<field name="indexed" type="date" stored="true" indexed="true" />
		<field name="bron" type="string" stored="true" indexed="true" />

		<field name="identifier" type="string" stored="true" indexed="true" />
		<field name="title" type="string" stored="true" indexed="true" />
		<field name="type" type="string" stored="true" indexed="true" multiValued="true" />
		<field name="language" type="string" stored="true" indexed="true" />
		<field name="creator" type="string" stored="true" indexed="true" />
		<field name="modified" type="date" stored="true" indexed="true" />
		<field name="spatial" type="string" stored="true" indexed="true" />
		<field name="temporal" type="string" stored="true" indexed="true" />

		<field name="abstract" type="string" stored="true" indexed="true" />
		<field name="accessRights" type="string" stored="true" indexed="true" multiValued="true" />
		<field name="alternative" type="string" stored="true" indexed="true" />
		<field name="audience" type="string" stored="true" indexed="true" />
		<field name="available" type="date" stored="true" indexed="true" />
		<field name="conformsTo" type="string" stored="true" indexed="true" />
		<field name="contributor" type="string" stored="true" indexed="true" />
		<field name="coverage" type="string" stored="true" indexed="true" />
		<field name="created" type="date" stored="true" indexed="true" />
		<field name="date" type="date" stored="true" indexed="true" />
		<field name="dateAccepted" type="date" stored="true" indexed="true" />
		<field name="dateCopyrighted" type="date" stored="true" indexed="true" />
		<field name="dateSubmitted" type="date" stored="true" indexed="true" />
		<field name="description" type="string" stored="true" indexed="true" />
		<field name="educationLevel" type="string" stored="true" indexed="true" />
		<field name="extent" type="string" stored="true" indexed="true" />
		<field name="format" type="string" stored="true" indexed="true" />
		<field name="hasFormat" type="string" stored="true" indexed="true" />
		<field name="hasPart" type="string" stored="true" indexed="true" />
		<field name="hasVersion" type="string" stored="true" indexed="true" />
		<field name="instructionalMethod" type="string" stored="true" indexed="true" />
		<field name="isFormatOf" type="string" stored="true" indexed="true" />
		<field name="isPartOf" type="string" stored="true" indexed="true" />
		<field name="isReferencedBy" type="string" stored="true" indexed="true" />
		<field name="isReplacedBy" type="string" stored="true" indexed="true" />
		<field name="isRequiredBy" type="string" stored="true" indexed="true" />
		<field name="isVersionOf" type="string" stored="true" indexed="true" />
		<field name="issued" type="date" stored="true" indexed="true" />
		<field name="license" type="string" stored="true" indexed="true" />
		<field name="mediator" type="string" stored="true" indexed="true" />
		<field name="provenance" type="string" stored="true" indexed="true" />
		<field name="publisher" type="string" stored="true" indexed="true" />
		<field name="references" type="string" stored="true" indexed="true" />
		<field name="relation" type="string" stored="true" indexed="true" />
		<field name="replaces" type="string" stored="true" indexed="true" />
		<field name="requires" type="string" stored="true" indexed="true" />
		<field name="rights" type="string" stored="true" indexed="true" />
		<field name="rightsHolder" type="string" stored="true" indexed="true" />
		<field name="source" type="string" stored="true" indexed="true" />
		<field name="subject" type="string" stored="true" indexed="true" />
		<field name="tableOfContents" type="string" stored="true" indexed="true" />
		<field name="valid" type="string" stored="true" indexed="true" />

		<field name="authority" type="string" stored="true" indexed="true" />
		<field name="isRatifiedBy" type="string" stored="true" indexed="true" />

		<dynamicField name="*" type="ignored" multiValued="true" />
	</fields>

	<uniqueKey>identifier</uniqueKey>
	<copyField source="uri" dest="identifier" />
	<copyField source="uri" dest="content" />
	<copyField source="title" dest="content" />
	<copyField source="description" dest="content" />

	<defaultSearchField>content</defaultSearchField>
	<solrQueryParser defaultOperator="OR" />
</schema>